{
  "compileOnSave": false,
  "compilerOptions": {
    // 特别注意：为了防止开发模式下和one的别名冲突，子模块的别名统一以_开头
    "paths": {
     
    },
    "jsx": "react-jsx",
    // 打包到的目录
    "outDir": "./dist/",
    // 是否生成sourceMap（用于浏览器调试）
    "sourceMap": false,
    // 禁用any
    "noImplicitAny": true,
    // 若有未使用的局部变量则抛错
    "noUnusedLocals": true,
    // 若有未使用的参数则抛错
    "noUnusedParameters": true,
    // 是否生成声明文件
    "declaration": true,
    // 声明文件打包的位置
    "declarationDir": "./dist/types/",
    // 是否生成声明文件map文件（便于调试）
    "declarationMap": false,
    // "moduleResolution": "node",
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    // 空指针检查
    "strictNullChecks": true,
    // 不是函数的所有返回路径都有返回值时报错
    "noImplicitReturns": true,
    // 转化成的目标语言
    "target": "ESNext",
    "baseUrl": "./",
    // "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "esnext"],
    "allowJs": false,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  // 要打包的文件
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"],
  // 不要打包的文件
  "exclude": ["node_modules"]
}